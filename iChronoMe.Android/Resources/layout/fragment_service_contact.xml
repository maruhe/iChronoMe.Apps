<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"    
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="@dimen/frame_padding"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Topic:"        
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/sp_topic"
            android:entries="@array/contact_topics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="may your name:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_name"
            android:inputType="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="email if you like to get response:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_email"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="a subject or title:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_subject"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="message:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_message"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:maxLines="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/cb_include_deviceinfo"
            android:text="include device-info"
            android:checked="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
			<CheckBox
					android:id="@+id/sb_include_settings"
					android:text="include app-setting"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>
			<CheckBox
            android:id="@+id/cb_include_location"
            android:text="include your current location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_send"
            android:text="send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="if you prefer email or like to send files:\ncontact@ichrono.me"
            android:autoLink="all"
            android:clickable="true"
            android:linksClickable="true"        
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="web-page:\nhttps://ichrono.me"
            android:autoLink="all"
            android:clickable="true"
            android:linksClickable="true"        
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>