<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        
    <ImageView 
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <LinearLayout        
        android:id="@+id/content_layout"
        android:orientation="vertical"
        android:layout_marginTop="-5dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            style="@style/Text.WidgetTitle" />

        <TextView
            android:id="@+id/widget_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/widget_chronospan_loading"
            android:textColor="@android:color/white"
            style="@style/Text.Loading" />


        <LinearLayout 
            android:id="@+id/eof_layout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/eof_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text.Loading"/>
            <LinearLayout 
                android:id="@+id/eof_progress_layout"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ProgressBar
                    android:layout_centerVertical="true"
                    android:id="@+id/eof_progress"
                    style="?android:attr/progressBarStyleHorizontal"  
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
