
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"    
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="@dimen/frame_padding"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">    

        <TextView
            android:text="As not everybody is a software engeniere you currently also can support this project with your fantasy and imagination. Suggestions of color-set's, design, usability, new features and all this stuff is welcome!\nTranslation is a progress we prefer native speakers who also are able to accompany us over some time as our text-base is growing every day.\nClock-Faces, Clock-Hands etc. are welcome as they are self made or licensed correctly! SVG is prefered."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>    

        <Button
            android:id="@+id/btnContact"
            android:text="get started and in contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="software developpers etc. please join us on\nhttps://github.com/maruhe/iChronoMe.Apps"
            android:autoLink="all"
            android:clickable="true"
            android:linksClickable="true"        
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="if you prefer email:\ncontact@ichrono.me"
            android:autoLink="all"
            android:clickable="true"
            android:linksClickable="true"        
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="web-page:\nhttps://ichrono.me"
            android:autoLink="all"
            android:clickable="true"
            android:linksClickable="true"        
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>