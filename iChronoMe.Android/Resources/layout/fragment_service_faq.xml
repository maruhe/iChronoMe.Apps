<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/frame_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnContact"
            android:text="@string/action_ContactUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnSupportProject"
            android:text="@string/action_SupportThisProject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <me.ichrono.droid.Controls.NonScrollingListView
            android:id="@+id/lv_faq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>