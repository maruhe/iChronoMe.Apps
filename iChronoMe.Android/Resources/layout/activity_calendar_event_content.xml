
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"    
    tools:showIn="@layout/activity_calendar_event"
    android:background="?attr/colorBackgroundAccent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TableLayout
        android:id="@+id/rootView"        
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow  
            android:layout_marginTop="@dimen/table_padding"
            android:layout_marginHorizontal="@dimen/table_padding"
            android:paddingHorizontal="@dimen/frame_padding"
            android:background="?android:attr/windowBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView 
                android:layout_span="2"
                android:layout_weight="1"
                android:text="Appointment Title"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:layout_marginHorizontal="@dimen/table_padding"
            android:paddingHorizontal="@dimen/frame_padding"
            android:background="?android:attr/windowBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:id="@+id/Subject"
                android:inputType="none"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_span="2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:id="@+id/row_calendar"            
            android:layout_marginHorizontal="@dimen/table_padding"
            android:paddingHorizontal="@dimen/frame_padding"
            android:background="?android:attr/windowBackground"
            android:padding="@dimen/frame_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/spCalendar"
                android:layout_span="2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>


        <TableRow
            android:layout_marginTop="@dimen/table_padding"
            android:layout_marginHorizontal="@dimen/table_padding"            
            android:paddingHorizontal="@dimen/frame_padding"
            android:background="?android:attr/windowBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView                 
                android:layout_span="2"
                android:layout_weight="1"
                android:text="Begin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:layout_marginHorizontal="@dimen/table_padding"
            android:paddingHorizontal="@dimen/frame_padding"
            android:background="?android:attr/windowBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/StartDate"
                android:inputType="date"
                android:layout_weight="60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/StartTime"
                android:inputType="time"
                android:layout_weight="40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow       
            android:id="@+id/row_start_helper"
            android:layout_marginHorizontal="@dimen/table_padding"
            android:paddingHorizontal="@dimen/frame_padding"
            android:background="?android:attr/windowBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView 
                android:text="in timezone:"
                android:textAlignment="viewEnd"
                android:layout_weight="60"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView 
                android:id="@+id/StartHelper"
                android:layout_weight="40"
                android:paddingStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:layout_marginHorizontal="@dimen/table_padding"
            android:paddingHorizontal="@dimen/frame_padding"
            android:background="?android:attr/windowBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView                 
                android:layout_span="2"
                android:layout_weight="1"
                android:text="End"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:layout_marginHorizontal="@dimen/table_padding"
            android:paddingHorizontal="@dimen/frame_padding"
            android:background="?android:attr/windowBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/EndDate"
                android:inputType="date"
                android:layout_weight="60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/EndTime"
                android:inputType="time"
                android:layout_weight="40"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow       
            android:id="@+id/row_end_helper"
            android:layout_marginHorizontal="@dimen/table_padding"
            android:paddingHorizontal="@dimen/frame_padding"
            android:background="?android:attr/windowBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView 
                android:text="in timezone:"
                android:textAlignment="viewEnd"
                android:layout_weight="60"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView 
                android:id="@+id/EndHelper"
                android:layout_weight="40"
                android:paddingStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:layout_marginHorizontal="@dimen/table_padding"
            android:paddingHorizontal="@dimen/frame_padding"
            android:background="?android:attr/windowBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:layout_span="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Switch
                    android:id="@+id/AllDay"
                    android:layout_width="48dp"
                    android:layout_height="48dp"/>
                <TextView android:text="All Day"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:id="@+id/row_timetype"            
            android:layout_marginHorizontal="@dimen/table_padding"
            android:paddingHorizontal="@dimen/frame_padding"
            android:background="?android:attr/windowBackground"
            android:padding="@dimen/frame_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/spTimeType"
                android:layout_span="2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>

        <TableRow
            android:layout_marginTop="@dimen/table_padding"
            android:layout_marginHorizontal="@dimen/table_padding"
            android:paddingHorizontal="@dimen/frame_padding"
            
            android:background="?android:attr/windowBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView                 
                android:layout_span="2"
                android:layout_weight="1"
                android:text="Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>

        <TableRow
            android:layout_marginHorizontal="@dimen/table_padding"
            android:paddingHorizontal="@dimen/frame_padding"
            android:background="?android:attr/windowBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:id="@+id/location"
                android:inputType="none"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_weight="1"
                android:layout_span="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow       
            android:id="@+id/row_location_helper"
            android:layout_marginHorizontal="@dimen/table_padding"
            android:paddingHorizontal="@dimen/frame_padding"
            android:paddingBottom="@dimen/frame_padding"
            android:background="?android:attr/windowBackground"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_span="2"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/selector"                
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/icons8_marker"
                    android:layout_gravity="center_vertical"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView 
                        android:id="@+id/location_helper"
                        android:maxLines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView 
                            android:id="@+id/location_time_info"
                            android:maxLines="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:src="@drawable/icons8_info_blue_clrd"
                            android:layout_marginStart="5dp"
                            android:layout_width="16dp"
                            android:layout_height="16dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <ProgressBar
                android:id="@+id/location_progress"
                android:layout_gravity="center_vertical"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="@dimen/table_padding"
            android:layout_marginHorizontal="@dimen/table_padding"
            android:paddingHorizontal="@dimen/frame_padding"
            android:background="?android:attr/windowBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView                 
                android:layout_span="2"
                android:layout_weight="1"
                android:text="Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:layout_marginHorizontal="@dimen/table_padding"
            android:paddingHorizontal="@dimen/frame_padding"
            android:background="?android:attr/windowBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/description"
                android:inputType="textMultiLine"
                android:minLines="2"
                android:maxLines="10" 
                android:layout_weight="1"
                android:layout_span="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="@dimen/table_padding"
            android:layout_marginHorizontal="@dimen/table_padding"
            android:paddingHorizontal="@dimen/frame_padding"
            android:background="?android:attr/windowBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/timezone"
                android:text="timezone 25 .. becomes a spinner?"
                android:layout_weight="1"
                android:layout_span="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="@dimen/table_padding"
            android:layout_marginHorizontal="@dimen/table_padding"
            android:paddingHorizontal="@dimen/frame_padding"
            android:background="?android:attr/windowBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/recurrence"
                android:text="Recurrence\n...may follows"
                android:layout_weight="1"
                android:layout_span="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>
    </TableLayout>
</ScrollView>