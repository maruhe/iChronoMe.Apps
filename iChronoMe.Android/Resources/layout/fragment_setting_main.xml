
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/frame_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   
    <TextView
        android:text="@string/label_default_TimeType"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/sp_default_timetype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/cb_calendar_default_timetype"
        android:text="@string/action_calendar_UsesDefaultTimeType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_calendar_timetype"
        android:text="@string/label_calendar_TimeType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/sp_calendar_timetype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/cb_notification_showalways"
        android:text="@string/action_notification_show_always"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_notification_config"
        android:text="@string/action_notification_config"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_system_test"
        android:text="system-test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_clear_cache"
        android:text="@string/action_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>