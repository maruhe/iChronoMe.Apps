
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="5dp"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@drawable/selector"
    android:stretchColumns="2"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_flag"
            android:scaleType="centerInside"
            android:layout_width="@dimen/image_size_text"
            android:layout_height="@dimen/image_size_text"/>
        <TextView
            android:id="@+id/title"
            android:text="knowhere"
            android:maxLines="1"
            android:paddingStart="5dp"
            android:singleLine="true"
            android:ellipsize="none"
            android:gravity="center_vertical"
            android:layout_span="3"
            android:paddingRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/real_sun_time"
            android:layout_width="@dimen/image_size_text"
            android:layout_height="@dimen/image_size_text"/>

        <TextView
            android:id="@+id/time_rdt"
            android:text="88:88:88"
            android:paddingStart="5dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/time_offset_rdt"
            android:text="888:88"
            android:paddingStart="10dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/middle_sun_time"
            android:layout_width="@dimen/image_size_text"
            android:layout_height="@dimen/image_size_text"/>

        <TextView
            android:id="@+id/time_mst"
            android:text="88:88:88"
            android:paddingStart="5dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/time_offset_mst"
            android:text="888:88"
            android:paddingStart="10dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_timezone"
            android:src="@drawable/icons8_timezone_0"
            android:layout_width="@dimen/image_size_text"
            android:layout_height="@dimen/image_size_text"/>

        <TextView
            android:id="@+id/time_tzt"
            android:text="88:88:88"
            android:paddingStart="5dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/time_offset_tzt"
            android:text="888:88"
            android:paddingStart="10dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </TableRow>

</TableLayout>