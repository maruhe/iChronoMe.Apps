<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:orientation="vertical"
    android:padding="@dimen/frame_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:stretchColumns="1"       
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow
            android:id="@+id/row_title"
            android:clickable="true"
            android:background="@drawable/selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@android:drawable/ic_menu_gallery"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView 
                android:id="@+id/title"
                android:layout_column="1"
                android:text="Appointment Title"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@android:drawable/ic_menu_gallery"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TableLayout
                android:stretchColumns="0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:clickable="true"
                    android:background="@drawable/selector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView android:text="All Day"
                        android:layout_column="0"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <Switch
                        android:layout_column="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </TableRow>
                <TableRow
                    android:id="@+id/row_start"
                    android:clickable="true"
                    android:background="@drawable/selector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView android:text="Begin"
                        android:layout_column="0"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/StartDate"
                        android:layout_column="1"
                        android:text="88.88.8888"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/StartTime"
                        android:layout_column="2"
                        android:text="88:88"
                        android:paddingStart="15dp"
                        android:paddingEnd="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </TableRow>
                <TableRow
                    android:id="@+id/row_end"
                    android:clickable="true"
                    android:background="@drawable/selector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView android:text="End"
                        android:layout_column="0"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/EndDate"
                        android:layout_column="1"
                        android:text="88.88.8888"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/EndTime"
                        android:layout_column="2"
                        android:text="88:88"
                        android:paddingStart="15dp"
                        android:paddingEnd="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </TableRow>
            </TableLayout>
        </TableRow>
        <TableRow
            android:id="@+id/row_calendar"
            android:clickable="true"
            android:background="@drawable/selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@android:drawable/ic_menu_gallery"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/calendar_name"
                android:layout_column="1"
                android:text="Calendar Name"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </TableRow>
        <TableRow
            android:id="@+id/row_reminders"
            android:clickable="true"
            android:background="@drawable/selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@android:drawable/ic_menu_gallery"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/Reminders"
                android:layout_column="1"
                android:text="5 mins before\n15 mins before"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </TableRow>
        <TableRow
            android:id="@+id/row_location"
            android:clickable="true"
            android:background="@drawable/selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@android:drawable/ic_menu_gallery"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/location"
                android:layout_column="1"
                android:text="Homestreet 23\n12345 MagicVillage"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </TableRow>
        <TableRow
            android:id="@+id/row_decription"
            android:clickable="true"
            android:background="@drawable/selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@android:drawable/ic_menu_gallery"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/description"
                android:layout_column="1"
                android:text="Line 1\nLine2\nLine3\nLine4\nLine5"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>
        <TableRow
            android:id="@+id/row_timezone"
            android:clickable="true"
            android:background="@drawable/selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@android:drawable/ic_menu_gallery"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/timezone"
                android:layout_column="1"
                android:text="timezone 5"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </TableRow>
        <TableRow
            android:id="@+id/row_recurrence"
            android:clickable="true"
            android:background="@drawable/selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@android:drawable/ic_menu_gallery"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/recurrence"
                android:layout_column="1"
                android:text="Recurrence"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:id="@+id/llBottom"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <include
            layout="@layout/fragment_datetime_selector"           
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>