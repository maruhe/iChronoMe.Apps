<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cfg_monthview"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:text="@string/calendar_monthview_appointmentviewtypes_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Spinner
        android:id="@+id/cfg_monthview_sp_appointmentview"
        android:entries="@array/calendar_monthview_appointmentviewtypes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="@string/calendar_monthview_appointmentdisplaymode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Spinner
        android:id="@+id/cfg_monthview_sp_appointmentmode"
        android:entries="@array/calendar_monthview_appointmentdisplaymodes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="@string/calendar_monthview_appointmentdisplaymode_max_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Spinner
        android:id="@+id/cfg_monthview_sp_appointmentcount"
        android:entries="@array/calendar_monthview_appointmentdisplaycount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="@string/calendar_monthview_navigation_direction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Spinner
        android:id="@+id/cfg_monthview_sp_navigation_direction"
        android:entries="@array/calendar_monthview_navigation_directions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:id="@+id/cfg_monthview_cb_show_weeknumbers"
        android:text="@string/label_cfg_calendar_show_weeknumbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>