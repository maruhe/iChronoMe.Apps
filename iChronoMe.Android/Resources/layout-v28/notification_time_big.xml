<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="44dp">

    <TextView
        android:id="@+id/tv_text2"
        android:textAppearance="@android:style/TextAppearance.Material.Notification"
        android:text="42, 99"
        android:textSize="16dp"
        android:gravity="bottom"
        android:textAlignment="viewEnd"
        android:layout_alignParentBottom="true"
        android:paddingEnd="@dimen/notification_padding"
        android:layout_marginEnd="@dimen/notification_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>    
    <TextView
        android:id="@+id/tv_text1"
        android:textAppearance="@android:style/TextAppearance.Material.Notification"
        android:text="Rome"
        android:textSize="22dp"
        android:textAlignment="viewEnd"
        android:layout_marginTop="-2dp"
        android:paddingEnd="@dimen/notification_padding"
        android:layout_marginEnd="@dimen/notification_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/icon"
        android:src="@drawable/real_sun_time_clrd"
        android:contentDescription="@string/TimeType"
        android:layout_marginLeft="@dimen/notification_padding"
        android:layout_width="44dp"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/tv_time"
        android:textAppearance="@android:style/TextAppearance.Material.Notification.Title"
        android:text="88:88"
        android:textSize="42dp"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:includeFontPadding="false"
        android:layout_toRightOf="@+id/icon"
        android:layout_marginTop="-2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
