<?xml version="1.0" encoding="utf-8" ?>
<resources>
	<attr name="iconTint" format="color" />
	<attr name="iconTitleTint" format="color" />
	<attr name="titleTextColor" format="color" />
	<attr name="AppBarOverlay" format="reference" />
	<attr name="PopupOverlay" format="reference" />

	<style name="BaseTheme.iChronoMe.Dark" parent="Theme.AppCompat">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="android:statusBarColor">@android:color/transparent</item>

		<item name="colorPrimary">@color/medDarkGray</item>
		<item name="colorPrimaryDark">@color/deepDarkGray</item>
		<item name="colorAccent">@color/highlightBlue</item>
		<item name="titleTextColor">@android:color/white</item>
		<item name="iconTint">@color/smokyWhite</item>
		<item name="iconTitleTint">@android:color/white</item>

		<item name="AppBarOverlay">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
		<item name="PopupOverlay">@style/ThemeOverlay.AppCompat.Light</item>
	</style>

	<style name="BaseTheme.iChronoMe.Light" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="android:statusBarColor">@android:color/transparent</item>

		<item name="colorPrimary">@color/medDarkGray</item>
		<item name="colorPrimaryDark">@color/deepDarkGray</item>
		<item name="colorAccent">@color/highlightBlue</item>
		<item name="titleTextColor">@android:color/white</item>
		<item name="iconTint">@color/deepDarkGray</item>
		<item name="iconTitleTint">@android:color/white</item>
		<item name="android:windowBackground">@color/smokyWhite</item>

		<item name="AppBarOverlay">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
		<item name="PopupOverlay">@style/ThemeOverlay.AppCompat.Light</item>
		<item name="alertDialogTheme">@style/greyDlg</item>

	</style>

	<style name="greyDlg" parent="Theme.AppCompat.Light.Dialog">
		<item name="android:windowBackground">@color/smokyWhite</item>
	</style>

	<style name="BaseTheme.iChronoMe.White" parent="Theme.AppCompat.Light">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="android:statusBarColor">@android:color/transparent</item>

		<item name="colorAccent">@color/darkHighlightBlue</item>
		<item name="titleTextColor">@android:color/black</item>
		<item name="iconTint">@color/deepDarkGray</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="iconTitleTint">@android:color/black</item>

		<item name="android:windowBackground">@android:color/white</item>

		<item name="AppBarOverlay">@style/ThemeOverlay.AppCompat.Light</item>
		<item name="PopupOverlay">@style/ThemeOverlay.AppCompat.Light</item>

	</style>

	<style name="TransparentTheme">
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowCloseOnTouchOutside">true</item>
		<item name="android:backgroundDimEnabled">false</item>
	</style>

	<style name="TransparentDialog" parent="android:Theme.Dialog">
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
	</style>
</resources>